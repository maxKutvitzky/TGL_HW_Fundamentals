<Window x:Name="NameInput" x:Class="CharacterWPF.NameInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterWPF"
        mc:Ignorable="d"
        Title="Name" Height="160" Width="300" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <StackPanel>
        <TextBlock Text="Enter character name" Margin="10,0,10,0" />
        <TextBox x:Name="inputTextBox" Margin="10" Height="50"/>
        <Button Content="OK" Click="OKButton_Click" Margin="10" Height="30"/>
    </StackPanel>
</Window>
